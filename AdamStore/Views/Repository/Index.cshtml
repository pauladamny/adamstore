
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.EmpName</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>name</th>
            <th>address</th>
            <th>department</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var emp in ViewBag.AllEmps)
        {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Address</td>
            <td>@emp.DepartmentName</td>
        </tr>
        }
    </tbody>
</table>




